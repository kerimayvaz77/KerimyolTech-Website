@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="hero-section mb-5">
    <div class="hero-overlay">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8 mx-auto text-center hero-text">
                    <h1 class="display-4 fw-bold text-white animate__animated animate__fadeInDown">
                        Teknoloji Dünyasına Hoş Geldiniz
                    </h1>
                    <p class="lead mt-3 text-white animate__animated animate__fadeInUp animate__delay-1s">
                        En yeni teknolojik ürünler ve fırsatlar burada!
                    </p>
                    <a href="#urunler" class="btn btn-light btn-lg mt-3 animate__animated animate__fadeInUp animate__delay-2s">
                        Ürünleri Keşfet
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ürünler Section -->
<section id="urunler" class="products-section">
    <div class="container mb-5">
        <h2 class="text-center mb-4">Öne Çıkan Ürünler</h2>
        <div class="row g-4">
            @foreach (var urun in ViewBag.Urunler)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <img src="@urun.ResimUrl" class="card-img-top product-img" alt="@urun.Ad">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@urun.Ad</h5>
                            <p class="card-text flex-grow-1">@urun.Aciklama</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="price-tag">@urun.Fiyat.ToString("C")</span>
                                <a href="/Urun/Detay/@urun.Id" class="btn btn-primary">İncele</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    /* Hero Section Styles */
    .hero-section {
        position: relative;
        height: 600px;
        background: url('/images/foto.jpg') no-repeat center center;
        background-size: cover;
        margin-top: -24px;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
    }

    .hero-text {
        z-index: 1;
    }

    /* Products Section Styles */
    .products-section {
        padding: 60px 0;
        background-color: #fff;
    }

    .section-title {
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 30px;
    }

    .section-title::after {
        content: '';
        position: absolute;
        left: 50%;
        bottom: 0;
        transform: translateX(-50%);
        width: 100px;
        height: 3px;
        background: linear-gradient(90deg, #007bff, #00ff88);
    }

    /* Product Card Styles */
    .product-card {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        position: relative;
        background: white;
        transform: translateY(0);
        transition: all 0.3s ease;
    }

    .card-img-container {
        height: 250px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        padding: 15px;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

    .product-title {
        font-size: 0.9rem;
        height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        margin-bottom: 10px;
    }

    .price-container {
        margin-top: auto;
    }

    .current-price {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
    }

    .favorite-button {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 2;
        color: #0d6efd;
        cursor: pointer;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .discount-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: #ffe8d9;
        color: #ff6b00;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.8rem;
        z-index: 2;
    }

    .out-of-stock {
        color: #dc3545;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .button-container {
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    /* Hover Effects */
    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    .product-card:hover .button-container,
    .product-card:hover .favorite-button {
        opacity: 1;
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .hero-section {
            padding: 40px 0;
        }

        .hero-text {
            padding-right: 0;
            text-align: center;
            margin-bottom: 30px;
        }
    }

    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 10px;
        overflow: hidden;
        background: #fff;
    }

    .card-body {
        background: #fff;
        border-top: 1px solid rgba(0,0,0,0.05);
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .product-img {
        height: 200px;
        width: 100%;
        object-fit: contain;
        padding: 15px;
        background: #fff;
    }

    .price-tag {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 10px;
        height: 2.4rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .card-text {
        color: #666;
        font-size: 0.9rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        margin-bottom: 1rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #1a2a6c, #b21f1f);
        border: none;
        padding: 8px 20px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #b21f1f, #1a2a6c);
        transform: translateY(-2px);
    }
</style>

