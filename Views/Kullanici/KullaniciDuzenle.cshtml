@model WebUygulama.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Kullanıcı Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="KullaniciDuzenle">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="form-group mb-3">
                            <label asp-for="KullaniciAdi" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="KullaniciAdi" class="form-control" required />
                            <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">E-posta</label>
                            <input asp-for="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Sifre" class="form-label">Şifre</label>
                            <input asp-for="Sifre" class="form-control" required />
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Rol" class="form-label">Rol</label>
                            <select asp-for="Rol" class="form-select" required>
                                <option value="Müşteri">Müşteri</option>
                                <option value="Admin">Admin</option>
                            </select>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="KullaniciListesi" class="btn btn-secondary">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 