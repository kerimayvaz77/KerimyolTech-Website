@model WebUygulama.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Kullanıcı Detayları</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Kullanıcı Adı</dt>
                        <dd class="col-sm-8">@Model.KullaniciAdi</dd>

                        <dt class="col-sm-4">E-posta</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Rol</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Rol == "Admin" ? "danger" : "primary")">
                                @Model.Rol
                            </span>
                        </dd>
                    </dl>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="KullaniciDuzenle" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
                        <a asp-action="KullaniciListesi" class="btn btn-secondary">Listeye Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 