@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <div class="text-center mb-4">
                <img src="~/images/logo.jpg" alt="Logo" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
            </div>

            <div class="login-form">
                <form asp-action="Giris" method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    
                    <div class="form-group mb-4">
                        <label class="form-label text-muted">Kullanıcı Adı veya E-posta</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-person text-muted"></i>
                            </span>
                            <input type="text" class="form-control border-start-0" name="kullaniciAdi" placeholder="Kullanıcı adı veya e-posta adresiniz" required>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label text-muted">Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-lock text-muted"></i>
                            </span>
                            <input type="password" class="form-control border-start-0" name="sifre" id="password" required>
                            <button class="btn btn-outline-secondary border border-start-0" type="button" onclick="togglePassword()">
                                <i class="bi bi-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                    </div>

                    <div class="d-flex justify-content-between text-center">
                        <a asp-action="Kayit" class="text-decoration-none">Kayıt Ol</a>
                        <a asp-action="SifremiUnuttum" class="text-decoration-none">Şifremi Unuttum?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .login-form {
        background: white;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    }

    .input-group-text {
        border-radius: 8px 0 0 8px;
    }

    .form-control {
        border-radius: 0 8px 8px 0;
        padding: 12px;
    }

    .btn-primary {
        border-radius: 8px;
        padding: 12px;
        background: #4154f1;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: #3443c9;
        transform: translateY(-2px);
    }

    .form-label {
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    a {
        color: #4154f1;
        transition: all 0.3s ease;
    }

    a:hover {
        color: #3443c9;
    }
</style>

<script>
function togglePassword() {
    const passwordInput = document.getElementById('password');
    const toggleIcon = document.getElementById('toggleIcon');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleIcon.classList.remove('bi-eye');
        toggleIcon.classList.add('bi-eye-slash');
    } else {
        passwordInput.type = 'password';
        toggleIcon.classList.remove('bi-eye-slash');
        toggleIcon.classList.add('bi-eye');
    }
}
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 